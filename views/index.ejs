<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
  <head>
    <script src="./js/color-modes.js"></script>
    <link
      rel="stylesheet"
      href="./bootstrap-icons-1.10.5/font/bootstrap-icons.min.css"
    />
    <link rel="shortcut icon" href="./img/photo_2024-09-04_02-41-58.jpg" type="image/x-icon">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta
      name="author"
      content="Mark Otto, Jacob Thornton, and Bootstrap contributors"
    />
    <meta name="generator" content="Hugo 0.112.5" />
    <title>Home page</title>

    <link href="./css/bootstrap.min.css" rel="stylesheet" />

   <link rel="stylesheet" href="./css/dark-light.css">

    <!-- Custom styles for this template -->
    <link href="./css/sidebars.css" rel="stylesheet" />
    <link rel="stylesheet" href="./css/myStyle.css" />
  </head>
  <body>
  <%- include('./componenet/light-dark.ejs') %>

    <main class="d-flex flex-nowrap">
<%- include('./componenet/sidebar.ejs',{currentPage:"index"}) %>
      <section class="w-100">
     <%- include('./componenet/nav.ejs') %>

     <% if (dataResult.length>0) { %>
      <table
      style="width: 99%"
      class="text-center mx-auto table mt-5 table-striped table-bordered"
    >
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Full Name</th>
          <th scope="col">Gender</th>
          <th scope="col">Country</th>
          <th scope="col">Age</th>
          <th scope="col">Last updated</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        
    <% dataResult.forEach((data,i)=>{%>
      <tr>
        <th scope="row"><%= i+1 %></th>
        <td>
          <%= data.firstName  %>	
          <%=  data.lastName %>
        </td>
 
        <td><%= data.gender %></td>
        <td><%=data.country	 %></td>
        <td><%= data.age %></td>
        <td><%=moment(data.updatedAt).fromNow();%></td>
        <td>
          <a
            data-bs-toggle="tooltip"
            data-bs-title="View details"
            data-bs-placement="top"
            class="btn btn-primary btn-sm"
            href="/view/<%= data.id %>"
            ><i class="bi bi-eye"></i
          ></a>

          <a
            data-bs-toggle="tooltip"
            data-bs-title="Edit user"
            data-bs-placement="top"
            class="btn btn-primary btn-sm"
            href="/edit/<%= data.id %>"
          >
            <i class="bi bi-pencil"></i>
          </a>
       <form style="display: inline;" action="/delete?id=<%= data.id %>&_method=DELETE" method="post">
        <button
        data-bs-toggle="tooltip"
        data-bs-title="Delete user"
        data-bs-placement="top"
        class="btn btn-danger btn-sm"
       
      >
        <i class="bi bi-trash"></i>
      </button>
       </form>
        </td>
      </tr>
  <%   })  %>
    
      </tbody>
    </table>
     <% } %>
<% if (dataResult.length==0) { %>
  <h2 class="text-center mt-5 m-auto pb-1" style="width: fit-content;">No data available</h2>
<% } %>
 
      
      </section>
    </main>
    <script src="./js/bootstrap.bundle.min.js"></script>

    <script src="./js/sidebars.js"></script>

    <script src="./js/main.js"></script>
  </body>
</html>
